<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <Button
        android:id="@+id/return_btn"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/arrowback"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


        <ImageView
            android:id="@+id/champ_image"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:contentDescription="@string/champion_image_desc"
            app:layout_constraintTop_toBottomOf="@id/return_btn"
            app:layout_constraintStart_toStartOf="@id/return_btn">
        </ImageView>

        <TextView
            android:id="@+id/champ_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Material3.HeadlineMedium"
            tools:text="Name"
            android:layout_marginVertical="10dp"
            app:layout_constraintTop_toBottomOf="@id/champ_image"
            app:layout_constraintStart_toStartOf="@id/champ_image"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/champ_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Material3.BodyMedium"
            tools:text="Title"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/champ_name"
            app:layout_constraintStart_toStartOf="@id/champ_name"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/champ_lore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Material3.BodyMedium"
            tools:text="Lore"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/champ_title"
            app:layout_constraintStart_toStartOf="@id/champ_title"
            android:padding="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>